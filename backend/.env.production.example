# Production env example - copy to backend/.env or set values on Render
PORT=4000
NODE_ENV=production
DATABASE_URL=postgres://<username>:<password>@<host>:5432/<dbname>

# JWT
JWT_SECRET=PRODUCTION_JWT_SECRET
JWT_EXPIRES=30d

# PayPal (LIVE)
# For sandbox use the sandbox values (PAYPAL_BASE=https://api-m.sandbox.paypal.com)
PAYPAL_CLIENT_ID=YOUR_PAYPAL_LIVE_CLIENT_ID
PAYPAL_CLIENT_SECRET=YOUR_PAYPAL_LIVE_SECRET
PAYPAL_BASE=https://api-m.paypal.com
PAYPAL_WEBHOOK_ID=YOUR_PAYPAL_WEBHOOK_ID_FOR_PRODUCTION

# Paystack (LIVE)
PAYSTACK_SECRET=PAYSTACK_LIVE_SECRET

# Storage: 'disk' or 's3'
STORAGE=s3
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
S3_KEY=DO_SPACES_KEY
S3_SECRET=DO_SPACES_SECRET
S3_BUCKET=your-space-bucket
S3_REGION=nyc3

# Frontend URL (production)
FRONTEND_URL=https://your-frontend-domain.com